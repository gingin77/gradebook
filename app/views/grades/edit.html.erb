<p>
  <%= link_to "Go back to your course roster", course_path(@course.id) %>
</p>
<br />
<p>
  You are updating <%= @grade.get_student_name %>'s grade for <%= @course.course_title %>
</p>
<% if @grade.percentage.nil? %>
  <p>
    A grade has not yet been submitted. Please enter the student's grade:
  </p>
<% end %>
<%= form_tag(course_grade_path, :method => "patch") do %>
  <p>
    <%= label_tag :percentage %>
    <%= text_field_tag :percentage, @grade.percentage %>
  </p>
  <br />
  <%= hidden_field :students_name, :value => @grade.get_student_name %>
  <%= submit_tag("Submit") %>
<% end %>
