<h1>All of the students at Super Awesome University</h1>

<table class="table table-sm">
  <thead class="thead-light">
    <tr>
      <th scope="col">Student</th>
      <th scope="col" class="text-center">GPA</th>
    </tr>
  </thead>
  <tbody>
    <% @gpas_array.sort_by { |s| -s[:gpa] }.map do |s| %>
    <tr>
      <td scope="row"><%= link_to s[:name], student_path(s[:index]) %></td>
      <td class="text-center"><%= s[:gpa].round(2) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
