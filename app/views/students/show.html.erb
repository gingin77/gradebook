<p>Showing courses and grades for <%= @student.name %></p>
<table class="table table-sm">
  <thead class="thead-light">
    <tr>
      <th scope="col">Course</th>
      <th scope="col">Grade %</th>
      <th scope="col">Letter Grade</th>
      <th scope="col">Points for GPA</th>
    </tr>
  </thead>
  <tbody>
    <% @student.grades.map do |g| %>
    <tr>
      <td scope="row"><%= g.get_course_title %></td>
      <td class="text-center"><%= g.percentage.round(1) %></td>
      <td class="text-center"><%= g.percnt_to_ltr %></td>
      <td class="text-center"><%= g.ltr_to_grd_pts(g.percnt_to_ltr) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<p>GPA for current term: <%= @grade&.grds_to_gpa.round(2) %></p>
